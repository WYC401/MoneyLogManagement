{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "outDir" : "./public",
    "rootDir": "./src",
    "target" : "es6",
    "module" : "es2015"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}